<html>

<head>
  <link href="/searchquotationcss.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />
</head>

<body>
    <a href="/chooseadmin" class="btn btn-danger" id="back" style="width: 80px;
   margin: 19px 0px -10px 13px;
"><i class="fas fa-arrow-circle-left"></i> Back</a>
  <br>
  <h1>
    <center>Complaints List</center>
  </h1>
  <br>
  <div class="cover">
    <form class="flex-form" action="/auth/viewcomplaints" method="post"  style="margin: 0  0 0 500px;">
      <input type="text" name="search_name" id="search_name" placeholder="Which company are you looking for?">
      <button class="btn btn-primary " type="submit" style="cursor:pointer;"><i class="fas fa-search"></i></button>
    </form>
  </div>
  <br>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Company name
          <a href="/orderbycompasc" class="btn btn-primary "><i class="fas fa-level-up-alt fa-xs"></i></a>
          <a href="/orderbycompdesc" class="btn btn-danger "><i class="fas fa-level-down-alt fa-xs"></i></a>
        </th>
        <th scope="col">Company Email</th>
        <th scope="col">Complaint</th>
        <th scope="col">Date of complaint</th>
      </tr>
    </thead>
    <tbody>
      {{#each items as |item|}}
      <tr class="table-secondary">
        <th scope="row">{{item.c_companyname}}</th>
        <td><a href="mailto:{{item.c_companyemail}}" class="btn btn-dark"><i class="fas fa-envelope-square"></i> &nbsp;&nbsp;{{item.c_companyemail}}</a></td>
        <td  style="width: 480px;">{{item.c_complaint}}</td>
        <td>{{item.c_dateofcomplaint}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>

</html>