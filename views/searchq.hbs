  <table class="table table-striped" id = "datatable">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Company name
          <br>
          <a href="/orderbyqasc" class="btn btn-primary "><i class="fas fa-level-up-alt fa-xs"></i></a>
          <a href="/orderbyqdesc" class="btn btn-danger "><i class="fas fa-level-down-alt fa-xs"></i></a>
        </th>
        <th scope="col">Company address</th>
        <th scope="col">Quotation Number</th>
        <th scope="col">Date of Quotation</th>
        <th scope="col">Validity</th>
        <th scope="col">HSN</th>
        <th scope="col">Packing charges</th>
        <th scope="col">GST</th>
        <th scope="col">Freight charges</th>
        <th scope="col">Payment Terms</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each items as |item|}}
      <tr class="table-danger">
        <th scope="row">{{item.companyabv}}<p style="color: #F5C6CB;">{{item.q_id }}</p></th>
        <td style="width: 250px;">{{item.companyaddress}}</td>
        <td>{{item.quotationnumber}}</td>
        <td style="width: 150px;">{{item.dateofq}}</td>
        <td>{{item.validity}}</td>
        <td>{{item.HSN}}</td>
        <td>{{item.packingcharges}}</td>
        <td>{{item.GST}}</td>
        <td>{{item.freight}}</td>
        <td>{{item.paymentterms}}</td>
        <td><a href="/viewqprod/{{item.q_id}}" class="btn btn-danger ">VIEW PRODUCTS <i class="fas fa-eye"></i></a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>

