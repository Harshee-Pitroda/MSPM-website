<body>
     <a href="/" class="btn btn-danger" style="width: 80px;margin: 8px 1px -48px 14px;"><i class="fas fa-arrow-circle-left"></i> Back</a>
    <div class="min-w-screen min-h-screen bg-black flex items-center justify-center px-5 py-5">
        <div class="w-full max-w-3xl">
            <div class="-mx-2 md:flex">
                <div class="w-full md:w-1/3 px-2">
                    <div class="rounded-lg shadow-sm mb-4">
                        <div class="rounded-lg bg-white shadow-lg md:shadow-xl relative overflow-hidden">
                            <div class="px-3 pt-8 pb-10 text-center relative z-10">
                                <h4 class="text-sm uppercase text-black-500 leading-tight">COMPANIES ASSOCIATED WITH
                                </h4>
                                <i class="fas fa-briefcase fa-5x"></i>
                                <h3 class="text-3xl text-gray-700 font-semibold leading-tight my-3" id="num">25</h3>
                            </div>
                            <div class="absolute bottom-0 inset-x-0">
                                <canvas id="chart1" height="70"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-full md:w-1/3 px-2">
                    <div class="rounded-lg shadow-sm mb-4">
                        <div class="rounded-lg bg-white shadow-lg md:shadow-xl relative overflow-hidden">
                            <div class="px-3 pt-8 pb-10 text-center relative z-10">
                                <h4 class="text-sm uppercase text-black-500 leading-tight">NUMBER OF YEARS OF WORK</h4>
                                <i class="fas fa-check-circle fa-5x"></i>
                                <h3 class="text-3xl text-gray-700 font-semibold leading-tight my-3" id="num2">25</h3>
                            </div>
                            <div class="absolute bottom-0 inset-x-0">
                                <canvas id="chart2" height="70"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-full md:w-1/3 px-2">
                    <div class="rounded-lg shadow-sm mb-4">
                        <div class="rounded-lg bg-white shadow-lg md:shadow-xl relative overflow-hidden">
                            <div class="px-3 pt-8 pb-10 text-center relative z-10">
                                <h4 class="text-sm uppercase text-black-500 leading-tight">NUMBER OF MACHINES MADE</h4>
                                <i class="fas fa-tools fa-5x"></i>
                                <h3 class="text-3xl text-gray-700 font-semibold leading-tight my-3" id="num3">8,028</h3>
                            </div>
                            <div class="absolute bottom-0 inset-x-0">
                                <canvas id="chart3" height="70"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
  <script type="text/javascript">
    $("#num").counterUp({delay:10,time:500});
    $("#num2").counterUp({delay:10,time:500});
    $("#num3").counterUp({delay:10,time:500});
  </script>

